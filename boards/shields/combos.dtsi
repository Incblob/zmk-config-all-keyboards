#define COMBO_LAYER(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = LAYERS; \
    timeout-ms = <20>; \
};

#define COMBO_LAYER_L(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = LAYERS; \
    timeout-ms = <22>; \
};

combos {
    compatible = "zmk,combos";
